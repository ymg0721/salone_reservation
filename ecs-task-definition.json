{
  "ipcMode": null,
  "taskRoleArn": "${ECS_TASK_ROLE_ARN}",
  "executionRoleArn": "${ECS_TASK_EXEC_ROLE_ARN}",
  "family": "${ECS_TASK_DEFINITION}",
  "cpu": "1024",
  "memory": "2048",
  "networkMode": "awsvpc",
  "requiresCompatibilities": ["FARGATE"],
  "containerDefinitions": [
    {
      "name": "app",
      "image": "${IMAGE}",
      "portMappings": [
        {
          "hostPort": 3000,
          "containerPort": 3000,
          "protocol": "tcp"
        }
      ],
      "entryPoint": null,
      "command": null,
      "linuxParameters": {
        "initProcessEnabled": true
      },
      "essential": true,
      "secrets": [
        {
          "valueFrom": "${SECRETS_MANAGER_ARN}:NODE_ENV::",
          "name": "NODE_ENV"
        },
        {
          "valueFrom": "${SECRETS_MANAGER_ARN}:NUXT_PUBLIC_APP_ENV::",
          "name": "NUXT_PUBLIC_APP_ENV"
        },
        {
          "valueFrom": "${SECRETS_MANAGER_ARN}:NUXT_PUBLIC_APP_ORIGIN::",
          "name": "NUXT_PUBLIC_APP_ORIGIN"
        },
        {
          "valueFrom": "${SECRETS_MANAGER_ARN}:NUXT_PUBLIC_API_BASE::",
          "name": "NUXT_PUBLIC_API_BASE"
        },
        {
          "valueFrom": "${SECRETS_MANAGER_ARN}:NUXT_PUBLIC_MEDIA_ORIGIN::",
          "name": "NUXT_PUBLIC_MEDIA_ORIGIN"
        },
        {
          "valueFrom": "${SECRETS_MANAGER_ARN}:NUXT_PUBLIC_STRIPE_PUBLIC_KEY::",
          "name": "NUXT_PUBLIC_STRIPE_PUBLIC_KEY"
        },
        {
          "valueFrom": "${SECRETS_MANAGER_ARN}:NUXT_PUBLIC_SENTRY_DSN::",
          "name": "NUXT_PUBLIC_SENTRY_DSN"
        },
        {
          "valueFrom": "${SECRETS_MANAGER_ARN}:NUXT_PUBLIC_GTAG_ID::",
          "name": "NUXT_PUBLIC_GTAG_ID"
        }
      ],
      "logConfiguration": {
        "logDriver": "awslogs",
        "secretOptions": null,
        "options": {
          "awslogs-group": "/ecs/${ECS_TASK_DEFINITION}",
          "awslogs-region": "ap-northeast-1",
          "awslogs-stream-prefix": "ecs"
        }
      }
    }
  ]
}
